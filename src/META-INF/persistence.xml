<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="HotelApplicationPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>app.bussines.model.Country</class>
    <class>app.bussines.model.Reservation</class>
    <class>app.bussines.model.Privilege</class>
    <class>app.bussines.model.User</class>
    <class>app.bussines.model.Town</class>
    <class>app.bussines.model.Address</class>
    <class>app.bussines.model.Room</class>
    <class>app.bussines.model.Guest</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hotel?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="laptop12"/>
    </properties>
  </persistence-unit>
</persistence>
